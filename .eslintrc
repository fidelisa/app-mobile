{
  "plugins": ["angular"],
  "extends": ["eslint:recommended", "angular"],
  "rules": {
    "no-alert": 0,
    "no-bitwise": 0,
    "no-console": 0,
    "camelcase": 1,
    "curly": 1,
    "eqeqeq": 0,
    "no-eq-null": 0,
    "guard-for-in": 1,
    "no-empty": 1,
    "angular/controller-name": [1,"/[A-Z].*Ctrl/"],
    "angular/controller-as": 0,
    "angular/document-service": 0,
    "angular/on-watch": 0,
    "angular/controller-as-route": 0,
    "angular/log": 0
  },
  "globals": {
    "$": false
  },
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "angular": 1
  }

}
